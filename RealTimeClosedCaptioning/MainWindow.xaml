<Window x:Class="RealTimeClosedCaptioning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealTimeClosedCaptioning"
        mc:Ignorable="d"
        Title="Real Time Closed Captioning" Height="450" Width="800" Background="Transparent" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="LastMessageBlock" Text="Initializing . . . " Background="Black" Foreground="White" FontWeight="Bold" TextWrapping="Wrap" FontSize="20" />
            <TextBlock x:Name="CurrentMessageBlock" Text="" Background="Black" Foreground="White" FontWeight="Bold" TextWrapping="Wrap" FontSize="20" />
        </StackPanel>
    </Grid>
</Window>
